        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Изменение цвета окна"
                   Grid.Column="0" Grid.Row="0"
                   Grid.ColumnSpan="2"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontSize="48">
            <TextBlock.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Копировать"/>
                    <MenuItem Header="Вставить"/>
                </ContextMenu>
            </TextBlock.ContextMenu>
        </TextBlock>

        <TextBlock x:Name="redText" Text="R" 
                   Grid.Column="0" Grid.Row="1"
                   FontSize="32"
                   VerticalAlignment="Center"
                   Margin="15"/>
        <TextBlock x:Name="greenText" Text="G" 
           Grid.Column="0" Grid.Row="2"
           FontSize="32"
           VerticalAlignment="Center"
           Margin="15"/>
        <TextBlock x:Name="blueText" Text="B" 
           Grid.Column="0" Grid.Row="3"
           FontSize="32"
           VerticalAlignment="Center"
           Margin="15"/>

        <Slider x:Name="redSlider" Value="0"
                Grid.Column="1" Grid.Row="1"
                VerticalAlignment="Center"
                Margin="15"
                TickFrequency="5"
                TickPlacement="TopLeft"
                Minimum="0" Maximum="255" 
                ValueChanged="slider_ValueChanged"/>
        <Slider x:Name="greenSlider" Value="0"
                Grid.Column="1" Grid.Row="2"
                VerticalAlignment="Center"
                Margin="15"
                TickFrequency="5"
                TickPlacement="TopLeft"
                Minimum="0" Maximum="255"
                ValueChanged="slider_ValueChanged"/>
        <Slider x:Name="blueSlider" Value="0"
                Grid.Column="1" Grid.Row="3"
                VerticalAlignment="Center"
                Margin="15"
                TickFrequency="5"
                TickPlacement="TopLeft"
                Minimum="0" Maximum="255"
                ValueChanged="slider_ValueChanged"/>
        <StatusBar  x:Name="status"  Grid.Row="5" Grid.Column="0"
                   Grid.ColumnSpan="2"/>


    </Grid>
</Window>
